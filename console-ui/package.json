{
  "name": "octovalve-console-ui",
  "private": true,
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "test": "vitest run -c vitest.config.ts",
    "test:watch": "vitest -c vitest.config.ts",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:build:dmg": "tauri build --bundles dmg --config '{\"bundle\":{\"active\":true}}'",
    "tauri:build:universal:dmg": "OCTOVALVE_SIDECAR_TARGET=universal-apple-darwin tauri build --target universal-apple-darwin --bundles dmg --config '{\"bundle\":{\"active\":true}}'"
  },
  "dependencies": {
    "@tauri-apps/api": "2.9.1",
    "@tauri-apps/plugin-dialog": "^2.5.0",
    "@vicons/ionicons5": "^0.13.0",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "dompurify": "^3.3.1",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1",
    "monaco-editor": "^0.52.0",
    "naive-ui": "^2.43.2",
    "pinia": "^3.0.4",
    "vue": "^3.4.38",
    "vue-i18n": "^9.14.5"
  },
  "devDependencies": {
    "@tauri-apps/cli": "2.9.1",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.49",
    "sass-embedded": "^1.97.1",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vitest": "^2.1.9",
    "vue-tsc": "^2.1.6"
  }
}
