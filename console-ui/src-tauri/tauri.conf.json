{
  "productName": "Octovalve",
  "version": "0.1.0",
  "identifier": "com.octovalve.console",
  "build": {
    "beforeDevCommand": "bash ../scripts/prepare_tauri_sidecars.sh && npm run dev",
    "beforeBuildCommand": "bash ../scripts/prepare_tauri_sidecars.sh && npm run build",
    "devUrl": "http://localhost:15173",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; connect-src http://127.0.0.1:19309 ws://127.0.0.1:19309; img-src 'self' data:; style-src 'self' 'unsafe-inline'; worker-src 'self' blob:;",
      "capabilities": [
        {
          "identifier": "main",
          "description": "Main window permissions",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:default",
            "core:window:allow-start-dragging"
          ]
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "Octovalve",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 640,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "theme": "Dark",
        "hiddenTitle": true
      }
    ],
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": false,
    "resources": [
      "remote-broker/linux-x86_64"
    ],
    "externalBin": [
      "../../target/release/console"
    ],
    "icon": [
      "icons/icon.icns",
      "icons/icon.png"
    ]
  }
}
