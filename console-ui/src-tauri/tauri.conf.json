{
  "productName": "Octovalve",
  "version": "0.1.0",
  "identifier": "com.octovalve.console",
  "build": {
    "beforeDevCommand": "bash ../scripts/prepare_tauri_sidecars.sh && npm run dev",
    "beforeBuildCommand": "bash ../scripts/prepare_tauri_sidecars.sh && npm run build",
    "devUrl": "http://localhost:15173",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://127.0.0.1:19309 ws://127.0.0.1:19309; img-src 'self' data:; style-src 'self' 'unsafe-inline'; worker-src 'self' blob:;",
      "capabilities": [
        {
          "identifier": "main",
          "description": "Main window permissions",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:default",
            "core:window:allow-start-dragging",
            "core:webview:allow-set-webview-zoom",
            "dialog:default",
            "dialog:allow-open",
            {
              "identifier": "shell:allow-spawn",
              "allow": [
                {
                  "name": "console",
                  "sidecar": true
                },
                {
                  "name": "octovalve-proxy",
                  "sidecar": true
                }
              ]
            },
            {
              "identifier": "shell:allow-execute",
              "allow": [
                {
                  "name": "console",
                  "sidecar": true
                },
                {
                  "name": "octovalve-proxy",
                  "sidecar": true
                }
              ]
            }
          ]
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "Octovalve",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 640,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "dragDropEnabled": false,
        "devtools": true
      }
    ],
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": false,
    "externalBin": [
      "../../target/release/console",
      "../../target/release/octovalve-proxy"
    ],
    "icon": [
      "icons/icon.icns",
      "icons/icon.png"
    ]
  }
}
